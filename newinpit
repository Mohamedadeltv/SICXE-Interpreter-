COPY	START	1000
FIRST	STL	RETADR
	&LDB	LENGTH
	+JSUB	RDREC
	LDA	LENGTH
	COMP	#0
INPUT	JEQ	ENDFIL
	+STA	WRREC
	J	CLOOP
	EXTEDF	LISTA,ENDA
	EXTREF	LISTA,LISTB,LISTC
ENDFIL	LDA	EOF
	STA	BUFFER
	LDA	#3
CLOOP	STA	@LENGTH
	+LDA	@WRREC
EOF	BYTE	C'EOF'
	WORD	1
RETADR	RESW	2
LENGTH	RESW	1
BUFFER	RESB	4096
RDREC	CLEAR	X
LISTA	MULR	A
	CLEAR	S
	+JEQ	#4096,X
RLOOP	BASE	INPUT
	$RD	INPUT
ENDA	COMPR	A,PC
	JEQ	=C'EOF'
	STCH	BUFFER,X
	TIXR	A
	JLT	=X'F1'
EXIT	STX	LENGTH
	RSUB	LENGTH
EOF	BYTE	C'llm'
	BYTE	X'F1'
WRREC	CLEAR	X
	=C'ABC'	%
	LTORG	LENGTH
	TD	OUTPUT
	JEQ	WLOOP,X
WLOOP	JEQ	BUFFER,X
	WD	OUTPUT
	TIXR	T
	JLT	=X'08'
	SIO	=X'18'
	RSUB	OUTPUT
OUTPUT	BYTE	X'05'
	=X'0920'	%
	END	FIRST